<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        card_view:cardCornerRadius="4dp">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_margin="4dp">

           
           <ImageView
               android:src="@drawable/icon"
               android:id="@+id/order_product_image"
               android:layout_width="55dp"
               android:layout_height="55dp"
               android:layout_margin="5dp"
               android:padding="2dp"/>


           <TextView
               android:text="Order Title Order Title"
               android:id="@+id/order_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:layout_alignParentTop="true"
               android:layout_toEndOf="@id/order_product_image"
               android:layout_toRightOf="@id/order_product_image"
               android:textStyle="bold"
               android:textColor="@android:color/black" />


           <TextView
               android:text="Details of any order place by the customer is order place by the customer is"
               android:id="@+id/order_description"
               android:layout_below="@id/order_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toEndOf="@id/order_product_image"
               android:layout_toRightOf="@id/order_product_image"
               android:layout_marginStart="8dp"
               android:layout_marginLeft="8dp"
               android:textSize="15sp" />


           <TextView
               android:text="GHC 50"
               android:id="@+id/order_total_amount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@id/order_title"
               android:layout_alignParentRight="true"
               android:gravity="right"
               android:textAlignment="gravity"
               android:textSize="20sp" />


       </RelativeLayout>


        <!--<TextView-->
            <!--android:id="@+id/info_text"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent" />-->

    </android.support.v7.widget.CardView>



</LinearLayout>
